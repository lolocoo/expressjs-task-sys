extends base

block content
    .page-title
        .layout
            h3 发布新任务
    .layout
        .create-task
            .decoration-work
            .create-task-table
                form(action="" method="post")
                    table.maintable(width="100%")
                        colgroup
                            col(width="120", align="right")
                            col
                        tr
                            th 任务名称：
                            td
                                input.form-control(type="text", name="taskName", autocomplete="off", required)
                        tr
                            th 任务类型：
                            td
                                label
                                    input(type="radio", value="0", name="taskType", checked)
                                    | 普通任务
                                label
                                    input(type="radio", value="1", name="taskType")
                                    | 绩效任务
                        tr
                            th 产品负责人：
                            td
                                select.form-control.chosen-select(name="mainPM", data-placeholder="选择产品负责人", multiple)
                                    option(value="和雪岭") 和雪岭
                                    each pm in person.pm
                                        option(value="#{pm.pmName}") #{pm.pmName}
                        tr
                            th 时间段：
                            td
                                input#startDate.form-control.startDate(type="datetime", name="departStartDate", autocomplete="off", required)
                                |  至 
                                input#endDate.form-control.endDate(type="datetime", name="departEndDate", autocomplete="off", required)
                        tr
                            th 任务分配：
                            td
                                table.sub-table(cellpadding="0", cellspacing="1")
                                    tr
                                        th(width="140") 工作内容
                                        th 负责人
                                    tr
                                        td(align="center") 交互设计
                                        td
                                            select.form-control.chosen-select(name="UD", data-placeholder="请选择...", multiple)
                                                each user in person.ued
                                                    if (user.position === 1)
                                                        option(value="#{user.userId}") #{user.name}

                                    tr
                                        td(align="center") 视觉设计
                                        td
                                            select.form-control.chosen-select(name="UI", data-placeholder="请选择...", multiple)
                                                each user in person.ued
                                                    if (user.position === 2)
                                                        option(value="#{user.userId}") #{user.name}
                                    tr
                                        td(align="center") 前端开发
                                        td
                                            select.form-control.chosen-select(name="FE", data-placeholder="请选择...", multiple)
                                                each user in person.ued
                                                    if (user.position === 3)
                                                        option(value="#{user.userId}") #{user.name}
                        tr
                            th 项目描述：
                            td
                                textarea.form-control(width="564", name="taskIntro", required)
                        //- tr
                        //-     th 抄送E-mail：
                        //-     td
                        //-         //- input.text.text3(type="text", name="email")
                        //-         select.form-control.chosen-select(name="email", data-placeholder="请选择...", multiple)
                        //-             each pm in person.pm
                        //-                 option(value="#{pm.pmEmail}@bitauto.com") #{pm.pmEmail}@bitauto.com
                        //-             each user in person.ued
                        //-                 option(value="#{user.userName}@bitauto.com") #{user.userName}@bitauto.com
                        tr
                            th 参考资料地址：
                            td
                                input.form-control(type="text", name="ReferenceUrl")
                        tr
                            td
                            td
                                input.btn.btn-primary(type="submit", value="发布")
                                | 
                                a.btn.btn-default(href="/") 取消
